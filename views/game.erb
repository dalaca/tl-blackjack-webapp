
<h2> Welcome, <%= session[:player_name] %> to BlackJack</h2>
</br>

<body>
 <div class="container">
   <div class="row" a>
			<div class="span9">
				<div class="well">
   				<h3> Dealer's Cards </h3>
    			<% session[:dealer_cards].each do |card| %>
    			<%= card.to_s %>
    			<% end %>
    			<p> Dealer has: <%= calculate_total(session[:dealer_cards]) %> </p>
    		</div>
				
				

				<div class="well">
					<h3> <%= session[:player_name] %>'s Cards </h3>
						<% session[:player_cards].each do |card| %>
    				<%= card.to_s %>
    			<% end %>
    		</br>
    			<p><%= session[:player_name] %> has: <%= calculate_total(session[:player_cards]) %> </p>
    		</div>
    		<% if @show_hit_or_stay_buttons %>
    		<form action="/game/player/hit" method="post">
    			<div class="btn-group">
    			<button class="btn">Hit</button>
    		</form>
    		<form action="/game/player/stay" method="post">
   				 <button class="btn">Stay</button>
   				</form>
   				<% end %>
  			</div>
	  	 </div>
			</div>
		 </div>
</body>


