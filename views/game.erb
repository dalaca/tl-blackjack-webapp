
<h2> Welcome, <%= session[:player_name] %> to BlackJack</h2>
</br>

<body>
   <div class="well">
    	<h3> Dealer's Cards </h3>
    	<% session[:dealer_cards].each do |card| %>
    	 <%= card_image(card) %>
      <% end %>
    	<p> Dealer has: <%= calculate_total(session[:dealer_cards]) %> </p>
    </div>
				
		<div class="well">
			<h3> <%= session[:player_name] %>'s Cards </h3>
				<% session[:player_cards].each do |card| %>
      		<%= card_image(card) %>
    		<% end %>
    	</br>
    	 <p><%= session[:player_name] %> has: <%= calculate_total(session[:player_cards]) %> </p>
    </div>
    
    <% if @show_hit_or_stay_buttons %>
    	<form id ="hit_form" action="/game/player/hit" method="post">
    		<button class="btn btn-success">Hit</button>
    	</form>
    
    	<form id="stay_form" action="/game/player/stay" method="post">
   		 <button class="btn btn-warning">Stay</button>
   		</form>
  	<% end %>
</body>


